---
interface Props {
	title: string;
	cardID: string;
}

const { title , cardID } = Astro.props;
---

<div class="prose" style="color: oklch(var(--gray-95) ); width: clamp(200px, 450px, 100% );" id={cardID}>

  <h2 style="
  font-weight: 600;
	margin-top: var(--gap);
	margin-bottom: var(--gap);
	text-align: center; ">
    { title }</h2>

  <div style="
	background: var(--border);	
	padding: 1px;
	border-radius: var(--radius-b);
	width: auto;
	height: auto;
	">
    <div class="glass" style="
	border-radius: var(--radius-b);
	padding: var(--gap-x04);
	contain: paint;
	background-color: oklch(var(--gray-10) / 0.5);
	box-shadow: 2px 3px 20px 2px oklch(0% 0 0/.1);
	width: auto;
	height: auto">
      <slot />

    </div>
  </div>
</div>